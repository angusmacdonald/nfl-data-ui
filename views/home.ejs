<div class="container">
      
      <select name="teamSelect" id="teamSelect" ng-model="selectedTeam">
      <div ng-repeat="team in teams">
          <option ng-repeat="team in teams" ng-value="team.short" >{{team.name}}</option>
      </div>
   
    </select>

       <div>
        {{selectedTeam}}
      </div>


      <div ng-repeat="player in players">
        <span style="font-size:20px; margin-left:10px;">
        {{player}}
        </span>
      </div>


      <div id="canvas-holder" style="width:100%">
                <canvas id="chart-area" width="300" height="300"/>
          </div>
</div> <!-- /container -->
